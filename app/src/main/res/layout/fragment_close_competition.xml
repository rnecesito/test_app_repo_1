<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/xml_tablelayout_bg"
        android:orientation="vertical" >

        <Button
            android:id="@+id/closed_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:drawableLeft="@drawable/create_competition"
            android:drawablePadding="10dp"
            android:text="@string/jap_create_competition"
            android:textSize="14sp" />

        <Button
            android:id="@+id/closed_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableLeft="@drawable/view_competition"
            android:drawablePadding="10dp"
            android:text="@string/jap_view_competition"
            android:textSize="14sp" />

        <Button
            android:id="@+id/closed_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableLeft="@drawable/join_competition"
            android:drawablePadding="10dp"
            android:text="@string/jap_join_competition"
            android:textSize="14sp" />

        <Button
            android:id="@+id/closed_create_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableLeft="@drawable/create_group"
            android:drawablePadding="10dp"
            android:text="@string/jap_create_group"
            android:textSize="14sp" />

        <Button
            android:id="@+id/closed_view_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableLeft="@drawable/view_groups"
            android:drawablePadding="10dp"
            android:text="@string/jap_view_groups"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignTop="@+id/relativeLayout1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-10dp"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/jap_closed_competition"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>